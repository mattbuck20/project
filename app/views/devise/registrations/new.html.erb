<div class="row">
  <div class="col m6 offset-m3 center">

    <h5>Sign up</h5>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="input-field">
         <%= f.text_field :username, autofocus: true, class: "validate", placeholder: "Username" %>
      </div>
    
      <div class="input-field">
        <%= f.email_field :email, class: "validate", placeholder: "Email" %>
      </div>
    
      <div class="input-field">
        <%= f.password_field :password, autocomplete: "off", class: "validate", placeholder: "Password" %>
      </div>
    
      <div class="input-field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "validate", placeholder: "Confirm Password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up", class:"btn waves-effect waves-light" %>
      </div>
    <% end %>

  </div>
</div>
